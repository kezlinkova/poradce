# Odstranění .html z URL
RewriteEngine On

# Pokud soubor nebo složka existuje, použij ji
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Přidej .html k požadavku (interně)
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Přesměrování staré URL na novou (301 redirect)
RewriteRule ^lekove-poradenstvi$ /poradenstvi-o-lecivech [R=301,L]

# Přesměrování z .html na čisté URL (301 redirect)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [R=301,L]
